<link rel="stylesheet" href="/custom-styles.css">
<link rel="stylesheet" href="/styles.css">

<h1>Finicky Feline's Fancy Creations</h1>
<h2>Build your own pizza:</h2>

<form method="POST" action="/customConfirmation">
    <label for="sizeInput">Size:</label>
    <select name="sizeInput" id="sizeInput" placeholder="Choose Size">
        <option value="small">Small</option>
        <option value="medium">Medium</option>
        <option value="large">Large</option>
    </select>
    <h3>Choose your toppings:</h3>
    <div class="toppingsContainer">
        {{#each topping}}
            <p>{{topping}}</p>
            <label for="toppings">{{this.name}}</label>
            <input type="checkbox" id="toppings" name="toppings" value={{toppings}}>
        {{/each}}
    </div>
    <label for="instructions">Special Instructions:</label><br>
    <textarea id="instructions" name="instructions" rows="10" cols="33" placeholder="Cough up special instructions here."></textarea><br>
    <input type="checkbox" name="gluten" id="gluten">
    <label for="gluten">Gluten Free</label>
    <button type="submit">Place Order</button>
</form>



